<h3>Listing customers</h3>

<table class="table table-striped table-hover">
	<thead>
	<tr>
		<th>External Key</th>
		<th>Name</th>
		<th>Shipping addresses count</th>
		<th>Validity</th>		
		<th colspan="3">Actions</th>
	</tr>	
	<tbody>
		<% @customers.each do |customer| %>
  		<tr>
  			<td><%= customer.external_key %></td>
		    <td><%= customer.name %></td>
		    <td><%= customer.shipping_addresses.count %></td>
		    <td><i class=<%=customer.validity ? 'icon-ok-sign' : 'icon-remove-circle'%>></i></td>
		    <td><%= link_to 'Show', customer %></td>
		    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
		    <td><%= link_to 'Change validity', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  		</tr>
  		<% end %>	
	</tbody>
</table>
<br />

<%= link_to 'New Customer', new_customer_path, :class =>'btn' %>
