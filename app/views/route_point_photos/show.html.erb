<h3><%=t(:photo)%></h3>
<p>
  <%= image_tag @route_point_photo.photo.url %>
</p>
<p>
  <b><%=t(:datetime)%>:</b>
  <%= @route_point_photo.created_at %>
</p>
<p>
  <b><%=t(:shipping_address)%>:</b>
  <%= @route_point_photo.route_point.shipping_address.name %>
</p>
<p>
  <b><%=t(:address)%>:</b>
  <%= @route_point_photo.route_point.shipping_address.address %>
</p>
<p>
  <b><%=t(:comment)%>:</b>
  <%= simple_format @route_point_photo.comment %>
</p>

<%= link_to t(:download), download_route_route_point_photo_path(@route, @route_point, @route_point_photo)%> |
<% if can? :manage, RoutePointPhoto %>
	<%= link_to t(:edit), edit_route_route_point_photo_path(@route, @route_point, @route_point_photo) %> |
	<%= link_to t(:destroy), route_route_point_photo_path(@route, @route_point, @route_point_photo), method: :delete, data: { confirm: t(:are_you_sure) } %> |
<%end%>
<%= link_to t(:back), route_route_point_photos_path(@route, @route_point) %>
