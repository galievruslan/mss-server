<% content_for :javascripts do %>
  <%= javascript_include_tag 'mobile_clients' %>
<% end %>
<%= form_for @mobile_client, :html => { :class => "form-horizontal"} do |f| %>
  <% if @mobile_client.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @mobile_client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">   
  	<%= f.label :client_type, t(:client_type), class: "control-label" %>   
    <div class="controls">
    	<%= f.select(:client_type, @client_types, {:include_blank => true}, {'data-placeholder' => t(:select_client_type)}) %>
    </div>
  </div>
  <div class="control-group">   
  	<%= f.label :version, t(:version), class: "control-label" %>   
    <div class="controls">
    	<%= f.text_field :version %>
    </div>
  </div>
  <div class="control-group">   
  	<%= f.label :file, t(:file), class: "control-label" %>   
    <div class="controls">    	
    	<div class="fileupload fileupload-new" data-provides="fileupload">
			  <div class="input-append">
			    <div class="uneditable-input"><i class="icon-file fileupload-exists"></i>
			    	<span class="fileupload-preview"></span>
			    </div>
			    <span class="btn btn-file">
			    	<span class="fileupload-new"><%= t(:select_file)%></span>
			    	<span class="fileupload-exists"><%=t(:change)%></span>
			    	<%= f.file_field :file %>
			    </span>
			    <a href="#" class="btn fileupload-exists" data-dismiss="fileupload"><%=t(:remove)%></a>
			  </div>
			</div>
    </div>
  </div>
  <div class="control-group">
    <%= f.submit(t(:save), :class =>'btn', :disable_with => t(:please_wait)) %>
  </div>
<% end %>	
