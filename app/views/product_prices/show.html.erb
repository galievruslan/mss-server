<p>
  <b><%= t(:product)%>:</b>
  <%= @product_price.product.name %>
</p>

<p>
  <b><%= t(:price_list)%>:</b>
  <%= @product_price.price_list.name %>
</p>

<p>
  <b><%= t(:price)%>:</b>
  <%= @product_price.price %>
</p>
<p>
  <b><%= t(:validity)%>:</b>
  <%= @product_price.validity ? t(:truth) : t(:lie) %>
</p>

<% if can? :manage, ProductPrice %>
	<%= link_to t(:edit), edit_product_product_price_path(@product, @product_price) %> |
	<% if @product_price.validity? %>
  	<%= link_to(t(:make_void), set_invalid_product_product_price_path(@product, @product_price), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% else %>
  	<%= link_to(t(:make_valid), set_valid_product_product_price_path(@product, @product_price), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% end %> 
<% end %>
<%= link_to t(:back), product_product_prices_path(@product) %>
