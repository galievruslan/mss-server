<p>
  <b><%= t(:name)%>:</b>
  <%= @status.name %>
</p>
<p>
  <b><%= t(:validity)%>:</b>
  <%= @status.validity ? t(:truth) : t(:lie) %>
</p>

<% if can? :manage, Status %>
	<%= link_to t(:edit), edit_status_path(@status) %> |
	<% if @status.validity? %>
  	<%= link_to(t(:make_void), set_invalid_status_path(@status), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% else %>
  	<%= link_to(t(:make_valid), set_valid_status_path(@status), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% end %> 
<% end %>
<%= link_to t(:back), statuses_path %>