<h3>Listing statuses</h3>
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> Filter:
</button>
<div id="demo" class="collapse">
	<br />
	<div class='well well-small'>		
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :name_cont, 'Name:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :name_cont, class: 'input-medium'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit "Search", class: 'btn btn-info' %>	  	
		  </div>	
		<%end%>
	</div>
</div>
<table class="table table-striped table-hover">
  <thead>
  	<tr>
    	<th><%= sort_link @search, :name, "Name" %></th>
    	<th colspan="3">Actions</th>
  	</tr>
  </thead>
	<tbody>
		<% @statuses.each do |status| %>
	  <tr>
	    <td><%= status.name %></td>
	    <td><%= link_to 'Show', status %></td>
	    <td><%= link_to 'Edit', edit_status_path(status) %></td>
	    <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
		<% end %>
	</tbody>
</table>
<%= paginate @statuses %>
<br />

<%= link_to 'New Status', new_status_path, :class =>'btn' %>
