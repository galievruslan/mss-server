<h3><%= t(:listing_statuses)%></h3>
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> <%= t(:filter)%>
</button>
<div id="demo" class="collapse">
	<br />
	<div class='well well-small'>		
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :name_cont, t(:name)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :name_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :validity_eq, t(:validity)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.check_box :validity_eq, checked: true, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit t(:search), class: 'btn btn-info' %>	
		  		<button type="button" class='btn btn-info' id="q_reset"><%= t(:reset)%></button>  	
		  </div>	
		<%end%>
	</div>
</div>
<%= form_tag multiple_change_validity_statuses_path do%>
<table class="table table-striped table-hover">
  <thead>
  	<tr>
  		<th><input type="checkbox" onclick="toggleChecked(this.checked)"></th>
    	<th><%= sort_link @search, :name, t(:name) %></th>
    	<th><%= sort_link @search, :validity, t(:validity) %></th>
    	<th colspan="3"><%= t(:actions)%></th>
  	</tr>
  </thead>
	<tbody>
		<% @statuses.each do |status| %>
	  <tr>
	  	<td><%= check_box_tag 'status_ids[]', status.id %></td>
	    <td><%= status.name %></td>
	    <td><i class=<%=status.validity ? 'icon-ok-sign' : 'icon-remove-circle'%>></i></td>
	    <td><%= link_to(status) do %><i class='icon-info-sign' title='<%= t(:show) %>'></i><%end%></td>
	    <% if can? :manage, Status %>
			  <td><%= link_to(edit_status_path(status)) do %><i class='icon-edit' title='<%=t(:edit)%>'></i><%end%></td>
			  <td><%= link_to(status, method: :delete, data: { confirm: t(:are_you_sure) }) do %><i class='icon-remove' title="<%=status.validity ? t(:make_void) : t(:make_valid)%>"></i><%end%></td>
			<% end %>
	  </tr>
		<% end %>
	</tbody>
</table>

<%= paginate @statuses %>
<% if can? :create, Status %>
	<%= link_to t(:new_status), new_status_path, :class =>'btn' %>
<% end %>
<% if can? :manage, Status %>
		<%= submit_tag t(:change_validity), class: 'btn'%>
	<%end%>
<%end%>
