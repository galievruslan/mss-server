<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-horizontal") do |f| %>
	<%= f.text_field :username, :autofocus => true, class: 'span4', placeholder: 'Username' %>  
	<%= f.password_field :password, class: 'span4', placeholder: 'Username' %>  
	<% if devise_mapping.rememberable? -%>  	
  	<div class="form-inline">
  		<%= f.check_box :remember_me %>
  		<%= f.label :remember_me %>
  	</div>
	<% end -%>
  <%= f.submit "Sign in", class: 'btn btn-info btn-block' %>
<% end %>
<%= render "devise/shared/links" %>
		
