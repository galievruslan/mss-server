<h3><%= t(:edit_profile)%></h3>
<%= form_for @user, :url => profile_update_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this warehouse from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username, t(:username) %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email, t(:email) %>
    <%= f.text_field :email %>
  </div>
  <h4><%= t(:settings)%></h4>
  <div class="field">
    <%= f.label :language, t(:language) %>
    <%= f.select(:language, ['EN','RU'], :include_blank => t(:select_language)) %>
  </div>
  <div><%= f.label :list_page_size, t(:list_page_size) %>
    <%= f.select(:list_page_size, [5,10,15,20,25,30], :include_blank => t(:select_list_page_size)) %>
  </div>
  <div class="actions">
    <%= f.submit(t(:save),class: 'btn') %>
  </div>
<% end %>
<%= link_to t(:back), profile_show_path %>
