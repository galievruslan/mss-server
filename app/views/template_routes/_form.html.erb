<% content_for :javascripts do %>
  <%= javascript_include_tag 'template_routes' %>
<% end %>
<% if @template_route.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @template_route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@template_route) do |f| %>
	<div class="tabbable">
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#tab1" data-toggle="tab"><%= t(:route)%></a></li>
	    <li><a href="#tab2" data-toggle="tab"><%= t(:route_points)%></a></li>
	  </ul>
	  <div class="tab-content">
	    <div class="tab-pane active" id="tab1">		
			  <div class="field">
			    <%= f.label :manager_id, t(:manager) %>
			    <%= f.select(:manager_id, @managers.collect  {|p| [ p.name, p.id ]}, {:include_blank => true}, {'data-placeholder' => t(:select_manager)}) %>
			  </div>
			  <div class="field">
			    <%= f.label :day_of_week, t(:day_of_week) %>
			    <%= f.select(:day_of_week, @days_of_week.collect  {|p| [ t(day_name(p)), p ]}, {:include_blank => true}, {'data-placeholder' => t(:select_day_of_week)}) %>
			  </div>
			  <div class="field form-inline">    
			    <%= f.check_box :validity %>
			    <%= f.label :validity, t(:validity) %><br /><br />
			  </div>
			</div>
			<div class="tab-pane" id="tab2">				
				<table id="table" class="table table-striped table-hover">
					<thead>
						<tr>
							<th><%= t(:shipping_address)%></th>
							<th><%= t(:validity) %></th>						
						</tr>
					</thead>
					<tbody>
						<%= f.fields_for :template_route_points do |template_route_point| %>
							<%= render 'template_route_point_fields', :f => template_route_point %>	
						<% end %>
					</tbody>
				</table>
				<p><%= link_to_add_association t(:add), f, :template_route_points, :class =>'btn' %></p>	
			</div>
			<div class="actions">
		    <%= f.submit(t(:save), :class =>'btn', :disable_with => t(:please_wait)) %>
		  </div>
		</div>
	</div>
<% end %>
