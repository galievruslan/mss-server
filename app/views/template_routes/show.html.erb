<p>
  <b>Manager:</b>
  <%= @template_route.manager.name %>
</p>

<p>
  <b>Day of week:</b>
  <%= day_name(@template_route.day_of_week) %>
</p>

<h4>Template route points</h4>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sort_link @search, :shipping_address_name, "Name" %></th>
      <th><%= sort_link @search, :shipping_address_address, "Address" %></th>
    </tr>
  </thead>
  <tbody>
    <% @template_route_points.each do |template_route_points| %>  
    <tr>
      <td><%= template_route_points.shipping_address.name %></td>
      <td><%= template_route_points.shipping_address.address %></td>
    </tr>
    <%end%>
  </tbody>
</table>

<%= paginate @template_route_points %>

<%= link_to 'Edit', edit_template_route_path(@template_route) %> |
<%= link_to 'Back', template_routes_path %>
