<tr class="audit_document_item">
	<td><%= select_tag( 'audit_document[audit_document_items_attributes][new_audit_document_items][product_id]' , options_from_collection_for_select(@products, "id", "name"), {:include_blank => true, 'data-placeholder' => t(:select_product), :class => 'select2-field'}) %></td>
	<td><%= number_field_tag( 'audit_document[audit_document_items_attributes][new_audit_document_items][quantity]', {}, min: 0, step: 1, class: "input-small quantity_input") %></td>
	<td><%= number_field_tag( 'audit_document[audit_document_items_attributes][new_audit_document_items][price]', {}, min: 0, step: 0.01, class: "input-small quantity_input") %></td>
	<td><%= number_field_tag( 'audit_document[audit_document_items_attributes][new_audit_document_items][face]', {}, min: 0, step: 1, class: "input-small quantity_input") %></td>
	<td><%= number_field_tag( 'audit_document[audit_document_items_attributes][new_audit_document_items][facing]', {}, min: 0, step: 1, class: "input-small quantity_input") %></td>
	<td><%= check_box_tag('audit_document[audit_document_items_attributes][new_audit_document_items][golden_shelf]') %></td>
	<td><a onclick="onDestroy(this)"><i class='icon-remove' title="<%= t(:remove)%>"></i></a>	</td>
</tr>
