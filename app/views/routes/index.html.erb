<h1>Listing routes</h1>

<table class="table table-striped table-hover">
  <thead>
	  <tr>
	    <th>Date</th>
	    <th>Manager</th>
	    <th>Points count</th>
	    <th colspan="3">Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @routes.each do |route| %>
	  <tr>
	    <td><%= route.date %></td>
	    <td><%= route.manager.name%></td>
	    <td><%= route.route_points.count%></td>
	    <td><%= link_to 'Show', route %></td>
	    <td><%= link_to 'Edit', edit_route_path(route) %></td>
	    <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Route', new_route_path, :class =>'btn' %>
