<% content_for :javascripts do %>
  <%= javascript_include_tag 'routes' %>
<% end %>
<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h4>

      <ul>
      <% @route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date, id: 'date_gt'%>
  </div>
  <div class="field">
    <%= f.label :manager %>
    <%= f.select(:manager_id, @managers.collect  {|p| [ p.name, p.id ]}, :include_blank => "Select a manager") %>
  </div>
  <div class="actions">
    <%= f.submit(:class =>'btn') %>
  </div>
<% end %>
