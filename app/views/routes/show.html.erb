<p>
  <b>Date:</b>
  <%= @route.date %>
</p>
<h4>Route points</h4>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sort_link @search, :shipping_address_name, "Name" %></th>
      <th><%= sort_link @search, :shipping_address_address, "Address" %></th>
      <th><%= sort_link @search, :status_name, "Status" %></th>
    </tr>
  </thead>
  <tbody>
    <% @route_points.each do |route_point| %>  
    <tr>
      <td><%= route_point.shipping_address.name %></td>
      <td><%= route_point.shipping_address.address %></td>
      <td><%= route_point.status.name %></td>
    </tr>
    <%end%>
  </tbody>
</table>

<%= paginate @route_points %>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
