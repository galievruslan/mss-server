<h3>Listing order_items</h3>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th>Order</th>
	    <th>Product</th>
	    <th>Unit of measure</th>
	    <th>Quantity</th>
	    <th colspan="3">Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @order_items.each do |order_item| %>
		  <tr>
		    <td><%= order_item.order_id %></td>
		    <td><%= order_item.product.name %></td>
		    <td><%= order_item.unit_of_measure.name %></td>
		    <td><%= order_item.quantity %></td>    
		    <td><%= link_to 'Show', order_order_item_path(@order, order_item) %></td>
		    <td><%= link_to 'Edit', edit_order_order_item_path(@order, order_item) %></td>
		    <td><%= link_to 'Destroy', order_order_item_path(@order, order_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
<br />

<%= link_to 'New Order item', new_order_order_item_path(@order), class: 'btn' %><br /><br />
<%= link_to 'Back', order_path(@order) %> | <%= link_to 'Back to Orders', orders_path %>