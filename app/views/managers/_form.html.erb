<% content_for :javascripts do %>
  <%= javascript_include_tag 'managers' %>
<% end %>
<%= form_for(@manager) do |f| %>
  <% if @manager.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @manager.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>	
  <div class="field">
    <%= f.label :external_key, t(:external_key) %>
    <%= f.text_field :external_key %>
  </div>
  <div class="field">
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :default_warehouse_id, t(:default_warehouse) %>
    <%= f.select(:default_warehouse_id, @warehouses.collect  {|p| [ p.name, p.id ] }, {:include_blank => true}, {'data-placeholder' => t(:select_warehouse)}) %>
  </div>
  <div class="field form-inline">    
    <%= f.check_box :validity %>
    <%= f.label :validity, t(:validity) %><br /><br />
  </div>
  <div class="actions">
    <%= f.submit(t(:save), :class =>'btn', :disable_with => t(:please_wait)) %>
  </div>
<% end %>
