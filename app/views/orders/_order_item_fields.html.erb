<tr>
  <td><%= f.select :product_id , @products.collect  {|p| [ p.name, p.id ] }, {:include_blank => true}, {'data-placeholder' => t(:select_product), :class => 'select2-field', :onchange => 'onProductChanged(this)'} %></td>
  <td><%= f.select :unit_of_measure_id ,  Product.find(f.object.product_id).unit_of_measures.collect  {|p| [ p.name, p.id ] }, {:include_blank => true}, {'data-placeholder' => t(:select_unit_of_measure), :class => 'select2-field uom_select'} %></td>
  <td><%= f.number_field :quantity, min: 1, step: 1 %></td>
  <td>
  	<a onclick="onDestroy(this)"><i class='icon-remove' title="<%= t(:remove)%>"></i></a>
  </td>
</tr>