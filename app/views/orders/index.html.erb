<% content_for :javascripts do %>
  <%= javascript_include_tag 'orders' %>
<% end %>

<h3><%= t(:listing_orders)%></h3>

<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> <%= t(:filter)%>
</button>
<div id="demo" class="collapse">
	<br>
	<div class='well well-small'>		
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		
		  <div class="control-group">
		  	<%= f.label :date_gt, t(:date_period)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :date_gt, id: 'date_gt' , class: 'input-small search-field'%>
		  		- <%= f.text_field :date_lt, id: 'date_lt' , class: 'input-small search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :shipping_address_name_cont, t(:shipping_address)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :shipping_address_name_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :manager_id_eq, t(:manager)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.select :manager_id_eq, @managers.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_manager)}, {:class => 'search-field'} %>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :warehouse_id_eq, t(:warehouse)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.select :warehouse_id_eq, @warehouses.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_warehouse)}, {:class => 'search-field'} %>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :price_list_id_eq, t(:price_list)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.select :price_list_id_eq, @price_lists.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_price_list)}, {:class => 'search-field'} %>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :exported_at_gt, t(:exported_period)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :exported_at_gt, id: 'exported_at_gt' , class: 'input-small search-field'%>
		  		- <%= f.text_field :exported_at_lt, id: 'exported_at_lt' , class: 'input-small search-field'%></div>
		  	</div>
		  <div class="control-group">	  	
		  		<%= f.submit t(:search), class: 'btn btn-info' %>	
		  		<button type="button" class='btn btn-info' id="q_reset"><%= t(:reset)%></button>  	
		  </div>	
		<%end%>
	</div>
</div>
<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th><%= sort_link @search, :date, t(:date) %></th>
	    <th><%= sort_link @search, :shipping_address_name, t(:shipping_address) %></th>
	    <th><%= sort_link @search, :manager_name, t(:manager) %></th>
	    <th><%= sort_link @search, :warehouse_name, t(:warehouse) %></th>
	    <th><%= sort_link @search, :price_list_name, t(:price_list) %></th>
	    <th><%= sort_link @search, :exported_at, t(:exported_date) %></th>
	    <th colspan="5">Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
	  <tr <%='class=success' if order.exported_at %>>
	    <td><%= order.date %></td>
	    <td><%= order.shipping_address.name %></td>
	    <td><%= order.manager.name %></td>
	    <td><%= order.warehouse.name %></td>
	    <td><%= order.price_list.name %></td>
	    <td><%= order.exported_at ? order.exported_at.strftime("%T %d-%m-%y") : 'Not exported'%></td>
	    <td><%= link_to 'Export again', export_again_order_path(order), :method => :put %></td>
	    <td><%= link_to(:controller => "orders", :action => "generate_xml", :id => order) do %><i class='icon-download' title="<%= t(:download_xml)%>"></i><% end %></td>
	    <td><%= link_to(order) do %><i class='icon-info-sign' title='<%= t(:show) %>'></i><%end%></td>
		  <td><%= link_to(edit_order_path(order)) do %><i class='icon-edit' title='<%=t(:edit)%>'></i><%end%></td>
		  <td><%= link_to(order, method: :delete, data: { confirm: t(:are_you_sure) }) do %><i class='icon-remove' title="<%= t(:remove)%>"></i><%end%></td>
	  </tr>
		<% end %>
	</tbody>
</table>
<%= paginate @orders %> 

<%= link_to t(:new_order), new_order_path, class: 'btn' %>