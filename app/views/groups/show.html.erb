<p>
  <b><%= t(:name) %>:</b>
  <%= @group.name %>
</p>

<h4><%= t(:users)%>:</h4>
<table class="table table-striped table-hover">
  <tbody>
    <% @group.users.each do |user| %>  
    <tr>
      <td><%= user.username %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, Group %>
	<%= link_to t(:edit), edit_group_path(@group) %> |
	<%= link_to t(:destroy), group_path(@group), method: :delete, data: { confirm: t(:are_you_sure) } %> |
<%end%>
<%= link_to t(:back), groups_path %>
