<p>
  <b><%= t(:name) %>:</b>
  <%= @group.name %>
</p>

<h4><%= t(:users)%>:</h4>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t(:username)%></th>
    </tr>
  </thead>
  <tbody>
    <% @group.users.each do |user| %>  
    <tr>
      <td><%= user.username %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if can? :manage, Group %><%= link_to t(:edit), edit_group_path(@group) %> |<%end%>
<%= link_to t(:back), groups_path %>
