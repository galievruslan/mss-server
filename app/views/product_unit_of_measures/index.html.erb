<h3>Listing product_unit_of_measures</h3>

<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> Filter:
</button>

<div id="demo" class="collapse">
	<br>
	<div class='well well-small'>
		<%= search_form_for [@product, @search], class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :unit_of_measure_id_eq, 'Unit of measure:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.select :unit_of_measure_id_eq, @unit_of_measures.collect  {|p| [ p.name, p.id ]}, {:include_blank => "Select a unit of measure"}, {:class => 'search-field'} %>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :count_in_base_unit_eq, 'Count in base unit:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :count_in_base_unit_eq, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit "Search", class: 'btn btn-info' %>
		  		<button type="button" class='btn btn-info' id="q_reset">Reset</button>   	
		  </div>	
		<%end%>
	</div>
</div>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th><%= sort_link @search, :product_name, "Product" %></th>
	    <th><%= sort_link @search, :unit_of_measure_name, "Unit of measure" %></th>
	    <th><%= sort_link @search, :count_in_base_unit, "Count in base unit" %></th>
	    <th colspan="3">Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @product_unit_of_measures.each do |product_unit_of_measure| %>
		  <tr <%='class=success' if product_unit_of_measure.base %>>
		    <td><%= product_unit_of_measure.product.name %></td>
		    <td><%= product_unit_of_measure.unit_of_measure.name %></td>
		    <td><%= product_unit_of_measure.count_in_base_unit %></td>
		    <td><%= link_to 'Show', product_product_unit_of_measure_path(@product, product_unit_of_measure) %></td>
		    <td><%= link_to 'Edit', edit_product_product_unit_of_measure_path(@product, product_unit_of_measure) %></td>
		    <td><%= link_to 'Destroy', product_product_unit_of_measure_path(@product, product_unit_of_measure), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
* Base product unit of measure marked in green<br /><br />
<%= paginate @product_unit_of_measures %>

<%= link_to 'New Product unit of measure', new_product_product_unit_of_measure_path, class: 'btn' %><br /><br />
<%= link_to 'Back', product_path(@product) %> | <%= link_to 'Back to Products', products_path %>
