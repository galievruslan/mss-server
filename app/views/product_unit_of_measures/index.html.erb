<h3>Listing product_unit_of_measures</h3>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th>Product</th>
	    <th>Unit of measure</th>
	    <th>Count in base unit</th>
	    <th colspan="3">Actions</th>
	  </tr>
	</thead>
	<tbody>
		<% @product_unit_of_measures.each do |product_unit_of_measure| %>
		  <tr>
		    <td><%= product_unit_of_measure.product.name %></td>
		    <td><%= product_unit_of_measure.unit_of_measure.name %></td>
		    <td><%= product_unit_of_measure.count_in_base_unit %></td>
		    <td><%= link_to 'Show', product_product_unit_of_measure_path(@product, product_unit_of_measure) %></td>
		    <td><%= link_to 'Edit', edit_product_product_unit_of_measure_path(@product, product_unit_of_measure) %></td>
		    <td><%= link_to 'Destroy', product_product_unit_of_measure_path(@product, product_unit_of_measure), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Product unit of measure', new_product_product_unit_of_measure_path, class: 'btn' %><br /><br />
<%= link_to 'Back', product_path(@product) %> | <%= link_to 'Back to Products', products_path %>
