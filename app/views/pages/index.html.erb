<%= render :partial => 'chart', :handlers => [:erb], :formats => [:js] %>
<h4><%= t(:index)%></h4>
<div class="row-fluid">
  <div class="span6">
		<div class="panel well">
      <div class="page-header">
      	<h4><%= t(:day_report)%></h4>
      </div>
      <table class="table table-striped">
	      <tbody>
	        <tr>
	        	<td><%= t(:orders_count)%></td>
	        	<td><%= Order.count_on(Date.today, Date.today)%></td>
	        </tr>
	        <tr>
	        	<td><%= t(:orders_amount)%></td>
	        	<td><%= Order.total_on(Date.today, Date.today)%></td>
	        </tr>
	        <tr>
	        	<td><%= t(:best_managers)%></td>        	
	        	<td>
	        		<% @best_day_managers.each do |best_day_manager|%>
		        		<%= Manager.find(best_day_manager.manager_id).name %> - 
		        		<%= best_day_manager.amount.round(2) %><br />
							<%end%>
	        	</td>
	        </tr>
	        <tr>
	        	<td><%= t(:best_warehouses)%></td>        	
	        	<td>
	        		<% @best_day_warehouses.each do |best_day_warehouse|%>
		        		<%= Warehouse.find(best_day_warehouse.warehouse_id).name %> - 
		        		<%= best_day_warehouse.amount.round(2) %><br />
							<%end%>	        		
	        	</td>
	        </tr>
	      </tbody>
      </table>
	  </div>
	</div>
	<div class="span6">
		<div class="panel well">
      <div class="page-header">
      	<h4><%= t(:month_report)%></h4>
      </div>
      <table class="table table-striped">
	      <tbody>
	        <tr>
	        	<td><%= t(:orders_count)%></td>
	        	<td><%= Order.count_on(Date.today.ago(1.month), Date.today)%></td>
	        </tr>
	        <tr>
	        	<td><%= t(:orders_amount)%></td>
	        	<td><%= Order.total_on(Date.today.ago(1.month), Date.today)%></td>
	        </tr>
	        <tr>
	        	<td><%= t(:best_managers)%></td>        	
	        	<td>
	        		<% @best_month_managers.each do |best_month_manager|%>
		        		<%= Manager.find(best_month_manager.manager_id).name %> - 
		        		<%= best_month_manager.amount.round(2) %><br />
							<%end%>	        		
	        	</td>
	        </tr>
	        <tr>
	        	<td><%= t(:best_warehouses)%></td>        	
	        	<td>
	        		<% @best_month_warehouses.each do |best_month_warehouse|%>
		        		<%= Warehouse.find(best_month_warehouse.warehouse_id).name %> - 
		        		<%= best_month_warehouse.amount.round(2) %><br />
							<%end%>
	        	</td>
	        </tr>
	      </tbody>
      </table>
	  </div>
	</div> 
	<div class="row-fluid">
		<div class="span12">
			<div class="panel well">
				<div id="orders_mount_chart">
			</div>	
		</div> 
	</div>
</div>
