<h3><%= t(:listing_categories)%></h3>

<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> <%= t(:filter) %>
</button>

<div id="demo" class="collapse">
	<br>
	<div class='well well-small'>
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :name_cont, t(:name)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :name_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :external_key_cont, t(:external_key)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :external_key_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :parent_name_cont, t(:parent)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.select :parent_id_eq, @parents.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_category)}, {:class => 'search-field'} %>		  		
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :validity_eq, t(:validity)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.check_box :validity_eq, checked: true, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit t(:search), class: 'btn btn-info' %>
		  		<button type="button" class='btn btn-info' id="q_reset"><Reset><%= t(:reset) %></button>   	
		  </div>	
		<%end%>
	</div>
</div>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
	  	<th><input type="checkbox" onclick="selectAll(this.checked)"></th>
	    <th><%= sort_link @search, :name, t(:name) %></th>
	    <th><%= sort_link @search, :external_key, t(:external_key) %></th>
	    <th><%= sort_link @search, :parent_name, t(:parent) %></th>	    
	    <th><%= sort_link @search, :validity, t(:validity) %></th>	    
	    <th colspan="3"><%= t(:actions) %></th>	    
	  </tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
		  <tr>
		  	<td><%= check_box_tag 'ids', category.id %></td>
		    <td><%= category.name %></td>
		    <td><%= category.external_key %></td>
		    <td><%= category.parent.name if category.parent %></td>		    
		    <td><i class=<%=category.validity ? 'icon-ok-sign' : 'icon-remove-circle'%>></i></td>		    
			  <td><%= link_to(category) do %><i class='icon-info-sign' title='<%= t(:show) %>'></i><%end%></td>
			  <% if can? :manage, Category %>
			    <td><%= link_to(edit_category_path(category)) do %><i class='icon-edit' title='<%=t(:edit)%>'></i><%end%></td>
			    <td><%= link_to(category, method: :delete, data: { confirm: t(:are_you_sure) }) do %><i class='icon-remove' title="<%=category.validity ? t(:make_void) : t(:make_valid)%>"></i><%end%></td>
			  <% end %>
		  </tr>
		<% end %>
</tbody>
</table>

<%= paginate @categories%>

<% if can? :create, Category %>
	<%= link_to t(:new_category), new_category_path, class: 'btn' %>
<%end%>
