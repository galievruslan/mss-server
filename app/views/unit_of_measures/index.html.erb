<h3><%= t(:listing_unit_of_measures)%></h3>
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> <%= t(:filter)%>
</button>
<div id="demo" class="collapse">
	<br />
	<div class='well well-small'>		
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :name_cont, t(:name)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :name_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :external_key_cont, t(:external_key)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :external_key_cont, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :validity_eq, t(:validity)+':', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.check_box :validity_eq, checked: true, class: 'search-field'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit t(:search), class: 'btn btn-info' %>
		  		<button type="button" class='btn btn-info' id="q_reset"><%= t(:reset)%></button>	  	
		  </div>	
		<%end%>
	</div>
</div>
<%= form_tag multiple_change_unit_of_measures_path do%>
	<table class="table table-striped table-hover">
		<thead>
		  <tr>
		  	<th><input type="checkbox" onclick="toggleChecked(this.checked)"></th>
		  	<th><%= sort_link @search, :external_key, t(:external_key) %></th>
		    <th><%= sort_link @search, :name, t(:name) %></th>
		    <th><%= sort_link @search, :validity, t(:validity) %></th>
		    <th colspan="3"><%= t(:actions)%></th>
		  </tr>
	  </thead>
	  <tbody>
			<% @unit_of_measures.each do |unit_of_measure| %>
			  <tr>
			  	<td><%= check_box_tag 'unit_of_measure_ids[]', unit_of_measure.id %></td>
			  	<td><%= unit_of_measure.external_key %></td>
			    <td><%= unit_of_measure.name %></td>
			    <td><i class=<%=unit_of_measure.validity ? 'icon-ok-sign' : 'icon-remove-circle'%>></i></td>
			    <td><%= link_to(unit_of_measure) do %><i class='icon-info-sign' title='<%= t(:show) %>'></i><%end%></td>
			    <% if can? :manage, UnitOfMeasure %>
				  	<td><%= link_to(edit_unit_of_measure_path(unit_of_measure)) do %><i class='icon-edit' title='<%=t(:edit)%>'></i><%end%></td>
				  	<td><%= link_to(unit_of_measure, method: :delete, data: { confirm: t(:are_you_sure) }) do %><i class='icon-remove' title="<%=unit_of_measure.validity ? t(:make_void) : t(:make_valid)%>"></i><%end%></td>
				  <% end %>
			  </tr>
			<% end %>
		</tbody>
	</table>
	
	<%= paginate @unit_of_measures %>
	<% if can? :create, UnitOfMeasure %>
		<%= link_to t(:new_unit_of_measure), new_unit_of_measure_path, class: 'btn', :disable_with => t(:please_wait) %>
	<% end %>
	<% if can? :manage, UnitOfMeasure %>
		<%= submit_tag t(:change_validity), class: 'btn', :disable_with => t(:please_wait), data: { confirm: t(:are_you_sure) }%>
	<%end%>
<%end%>