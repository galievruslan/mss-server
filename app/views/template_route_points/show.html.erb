<p>
  <b><%= t(:shipping_address)%>:</b>
  <%= @template_route_point.shipping_address.name %>
</p>
<p>
  <b><%= t(:address)%>:</b>
  <%= @template_route_point.shipping_address.address %>
</p>
<p>
  <b><%= t(:validity)%>:</b>
  <%= @template_route_point.validity ? t(:truth) : t(:lie) %>
</p>

<% if can? :manage, TemplateRoutePoint %>
	<%= link_to t(:edit), edit_template_route_template_route_point_path(@template_route, @template_route_point) %> |
	<% if @template_route_point.validity? %>
  	<%= link_to(t(:make_void), set_invalid_template_route_template_route_point_path(@template_route, @template_route_point), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% else %>
  	<%= link_to(t(:make_valid), set_valid_template_route_template_route_point_path(@template_route, @template_route_point), :method => :put, data: { confirm: t(:are_you_sure) }) %> |
  <% end %> 
<% end %>
<%= link_to t(:back), template_route_template_route_points_path %>
