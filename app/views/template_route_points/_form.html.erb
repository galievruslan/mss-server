<%= form_for([@template_route, @template_route_point]) do |f| %>
  <% if @template_route_point.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @template_route_point.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :shipping_address_id, t(:shipping_address) %>
    <%= f.select(:shipping_address_id, @shipping_addresses.collect {|p| [p.name, p.id]}, :include_blank => t(:select_shipping_address)) %>
  </div>
  <div class="field form-inline">    
    <%= f.check_box :validity %>
    <%= f.label :validity, t(:validity) %><br /><br />
  </div>
  <div class="actions">
    <%= f.submit(t(:save), class: 'btn') %>
  </div>
<% end %>
