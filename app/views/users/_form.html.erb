<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<div class="field">
    <%= f.label :username, t(:username) %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email, t(:email) %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :language, t(:language) %>
    <%= f.select(:language, ['EN','RU'], :include_blank => "Select a language") %>
  </div>
  <div class="field">
    <%= f.label :manager_id, t(:manager) %>
    <%= f.select(:manager_id, @managers.collect  {|p| [ p.name, p.id ]}, :include_blank => "Select a manager") %>
  </div>
  <div>
  	<%= f.label :password, t(:password) %>
  	<%= f.password_field :password%>
  </div>
  <div><%= f.label :password_confirmation, t(:confirmation) %>
    <%= f.password_field :password_confirmation %>
  </div>
  <table class="table table-striped table-hover">
  	<thead>
  		<tr>
  			<th><%= t(:role)%></th>
  			<th><%= t(:enable)%></th>
  		</tr>
  	</thead>
  	<tbody>
  		<tr>
  			<td><%= t(:admin)%></td>
  			<td><%= check_box_tag("admin") %></td>
  		</tr>
  		<tr>
  			<td><%= t(:supervisor)%></td>
  			<td><%= check_box_tag("supervisor") %></td>
  		</tr>
  		<tr>
  			<td><%= t(:manager)%></td>
  			<td><%= check_box_tag("manager") %></td>
  		</tr>
  	</tbody>
  </table>
  <div class="actions">
    <%= f.submit(t(:save), :class =>'btn') %>
  </div>
<% end %>