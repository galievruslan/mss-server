<% content_for :javascripts do %>
  <%= javascript_include_tag 'products' %>
<% end %>
<%= form_for @product, :html => { :class => "form-horizontal"} do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :external_key, t(:external_key), class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :external_key %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category_id, t(:category), class: "control-label" %>
    <div class="controls">
    	<%= f.select(:category_id, @categories.collect  {|p| [ p.name, p.id ] }, {:include_blank => true}, {'data-placeholder' => t(:select_category)}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, t(:name), class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
  	<%= f.label :mml, t(:mml), class: "control-label" %>    
    <div class="controls">
    	<%= f.check_box :mml %>
    </div>
  </div>
  <div class="control-group">
  	<%= f.label :validity, t(:validity), class: "control-label" %>    
    <div class="controls">
    	<%= f.check_box :validity %>
    </div>
  </div>
  <div class="control-group">
    <%= f.submit(t(:save), :class =>'btn', :disable_with => t(:please_wait)) %>
  </div>
<% end %>
