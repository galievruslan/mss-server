<% content_for :javascripts do %>
  <%= javascript_include_tag 'reports' %>
<% end %>
<h3><%= t(:reports)%></h3>
<ul class="nav nav-tabs">
  <li><%= link_to t(:reports), reports_path %></li>
  <li><%= link_to t(:order_report), reports_orders_path%></li>
  <li class="active"><%= link_to t(:route_report), reports_routes_path%></li>
  <li><%= link_to t(:template_route_report), reports_template_routes_path%></li>
</ul>
<%= search_form_for @search,:url => reports_routes_path(format: "xls"), class: "form-horizontal" do |f| %>
	<div class="control-group">
  	<%= f.label :route_date_gt, t(:date_period)+':', class: "control-label"%>
  	<div class="controls">
  		<div id="datetimepicker1" class="input-append date">
		    <%= f.text_field :route_date_gt, class: "input-medium search-field"%>
		    <span class="add-on">
		      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
		      </i>
		    </span>
		  </div>		  		
  		- 
  		<div id="datetimepicker2" class="input-append date">
		    <%= f.text_field :route_date_lt, class: "input-medium search-field"%>
		    <span class="add-on">
		      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
		      </i>
		    </span>
		  </div>		  		
  	</div>
  </div>
  <div class="control-group">
  	<%= f.label :route_manager_id_eq, t(:manager)+':', class: "control-label"%>
  	<div class="controls">
  		<%= f.select :route_manager_id_eq, @managers.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_manager)}, {:class => 'search-field'} %>
  	</div>
  </div>
  <div class="control-group">
  	<%= f.label :shipping_address_customer_id_eq, t(:shipping_address)+':', class: "control-label"%>
  	<div class="controls">
  		<%= f.select :shipping_address_customer_id_eq, @customers.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_customer)}, {:class => 'search-field'} %>
  	</div>
  </div>
  <div class="control-group">
  	<%= f.label :shipping_address_id_eq, t(:shipping_address)+':', class: "control-label"%>
  	<div class="controls">
  		<%= f.select :shipping_address_id_eq, @shipping_addresses.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_shipping_address)}, {:class => 'search-field'} %>
  	</div>
  </div>
  <div class="control-group">
  	<%= f.label :status_id_eq, t(:status)+':', class: "control-label"%>
  	<div class="controls">
  		<%= f.select :status_id_eq, @statuses.collect  {|p| [ p.name, p.id ]}, {:include_blank => t(:select_status)}, {:class => 'search-field'} %>
  	</div>
  </div>
  <div class="control-group">	  	
  		<%= f.submit t(:download_xls), class: 'btn btn-info' %>	
  		<button type="button" class='btn btn-info' id="q_reset"><%= t(:reset)%></button>  	
  </div>	
<%end%>