<%= form_for @warehouse, :html => { :class => "form-horizontal"} do |f| %>
  <% if @warehouse.errors.any? %>
    <div class="alert alert-error">
    	<button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%=t('errors.title')%></h4>
      <ul>
      <% @warehouse.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="control-group">
    <%= f.label :external_key, t(:external_key), class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :external_key %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, t(:name), class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, t(:address), class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :address %>
    </div>
  </div>  
  <div class="control-group">
  	<%= f.label :validity, t(:validity), class: "control-label" %>
  	<div class="controls">
  		<%= f.check_box :validity %>    	
    </div>    
  </div>
  <div class="control-group">
    <%= f.submit(t(:save), class: 'btn', :disable_with => t(:please_wait)) %>
  </div>
<% end %>
