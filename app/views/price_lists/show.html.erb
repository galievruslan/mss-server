<p>
  <b>Name:</b>
  <%= @price_list.name %>
</p>
<p>
  <b>External key:</b>
  <%= @price_list.external_key %>
</p>
<p>
  <b>Validity:</b>
  <%= @price_list.validity %>
</p>

<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> Filter:
</button>
<div id="demo" class="collapse">
	<br>
	<div class='well well-small'>
		<%= search_form_for [@price_list, @search], class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :product_name_cont, 'Product name:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :product_name_cont, class: 'input-medium'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :price_eq, 'Count:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :price_eq, class: 'input-medium'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit "Search", class: 'btn btn-info' %>	  	
		  </div>	
		<%end%>
	</div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sort_link @search, :product_name, "Product" %></th>
      <th><%= sort_link @search, :price, "Price" %></th>
    </tr>
  </thead>
  <tbody>
    <% @price_list_lines.each do |price_list_line| %>
      <td><%= price_list_line.product.name %></td>
      <td><%= price_list_line.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @price_list_lines %>

<%= link_to 'Edit', edit_price_list_path(@price_list) %> |
<%= link_to 'Back', price_lists_path %>
