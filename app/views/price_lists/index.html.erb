<h3>Listing price_lists</h3>
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
  <i class="icon-filter icon-white"></i> Filter:
</button>
<div id="demo" class="collapse">
	<br />
	<div class='well well-small'>		
		<%= search_form_for @search, class: "form-horizontal" do |f| %>
		  <div class="control-group">
		  	<%= f.label :name_cont, 'Name:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :name_cont, class: 'input-medium'%>
		  	</div>
		  </div>
		  <div class="control-group">
		  	<%= f.label :external_key_cont, 'External key:', class: "control-label"%>
		  	<div class="controls">
		  		<%= f.text_field :external_key_cont, class: 'input-medium'%>
		  	</div>
		  </div>
		  <div class="control-group">	  	
		  		<%= f.submit "Search", class: 'btn btn-info' %>	  	
		  </div>	
		<%end%>
	</div>
</div>
<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th><%= sort_link @search, :name, "Name" %></th>
	    <th><%= sort_link @search, :external_key, "External key" %></th>
	    <th>Count products</th>
	    <th><%= sort_link @search, :validity, "Validity" %></th>
	    <th colspan="3">Actions</th>
	  </tr>
	<thead>
<% @price_lists.each do |price_list| %>
  <tr>
    <td><%= price_list.name %></td>
    <td><%= price_list.external_key %></td>
    <td><%= price_list.price_list_lines.count %></td>
    <td><i class=<%= price_list.validity ? 'icon-ok-sign' : 'icon-remove-circle'%>></i></td>
    <td><%= link_to 'Show', price_list %></td>
    <td><%= link_to 'Edit', edit_price_list_path(price_list) %></td>
    <td><%= link_to 'Change validity', price_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= paginate @price_lists %>
<br />

<%= link_to 'New Price list', new_price_list_path, class: 'btn' %>
